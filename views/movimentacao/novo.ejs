<%- include('../includes/header.ejs', { titulo: 'Nova Movimentação' }) %>

<main class="container-mov">
  <h2>Nova Movimentação de Estoque</h2>

  <!-- ======== RESUMO VISUAL ======== -->
  <section class="resumo-mov">
    <div class="card resumo-entrada">
      <div class="info">
        <h4>Entradas</h4>
        <p>+120 peças</p>
      </div>
      <i class="fa-solid fa-arrow-down-long"></i>
    </div>

    <div class="card resumo-saida">
      <div class="info">
        <h4>Saídas</h4>
        <p>-80 peças</p>
      </div>
      <i class="fa-solid fa-arrow-up-long"></i>
    </div>

    <div class="card resumo-saldo">
      <div class="info">
        <h4>Estoque Total</h4>
        <p>40 peças</p>
      </div>
      <i class="fa-solid fa-boxes-stacked"></i>
    </div>
  </section>

  <!-- ======== FORMULÁRIO ======== -->
  <form action="/movimentacao/novo" method="POST" class="form-mov">
    <div class="form-group">
      <label for="id_produto">Produto:</label>
      <select name="id_produto" id="id_produto" required>
        <option value="">Selecione um produto</option>
        <% produtos.forEach(p => { %>
          <option value="<%= p.id_produto %>"><%= p.nome_produto %></option>
        <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label for="tipo">Tipo de Movimentação:</label>
      <select name="tipo" id="tipo" required>
        <option value="">Selecione...</option>
        <option value="E">Entrada</option>
        <option value="S">Saída</option>
      </select>
    </div>

    <div class="form-group">
      <label for="quantidade">Quantidade:</label>
      <input type="number" name="quantidade" id="quantidade" min="1" required />
    </div>

    <div class="form-group">
      <label for="descricao">Descrição:</label>
      <textarea name="descricao" id="descricao" rows="4" placeholder="Ex: Reposição de estoque, devolução de cliente, venda, etc."></textarea>
    </div>

    <div class="form-buttons">
      <button type="submit" class="btn-salvar">
        <i class="fa-solid fa-check"></i> Salvar
      </button>
      <a href="/movimentacao/listar" class="btn-voltar">
        <i class="fa-solid fa-arrow-left"></i> Voltar
      </a>
    </div>
  </form>
</main>

<%- include('../includes/footer.ejs') %>

<style>
    /* ======== MOVIMENTAÇÃO DE ESTOQUE - DESIGN PREMIUM ======== */

body {
  background: linear-gradient(135deg, #f3f4f6, #e0e7ff);
  font-family: 'Poppins', sans-serif;
  color: #333;
  min-height: 100vh;
  padding-top: 100px;
}

/* ======== CONTAINER ======== */
.container-mov {
  max-width: 950px;
  margin: 0 auto 60px auto;
  background: #fff;
  padding: 50px;
  border-radius: 24px;
  box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
  animation: fadeInUp 0.6s ease;
  position: relative;
  overflow: hidden;
}

/* ======== ANIMAÇÕES ======== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ======== TÍTULO ======== */
.container-mov h2 {
  text-align: center;
  margin-bottom: 40px;
  font-size: 2rem;
  color: #1a1a40;
  font-weight: 700;
}

.container-mov h2::after {
  content: "";
  display: block;
  width: 90px;
  height: 4px;
  background: linear-gradient(90deg, #6366f1, #a855f7);
  margin: 10px auto 0;
  border-radius: 3px;
}

/* ======== RESUMO ======== */
.resumo-mov {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40px;
  flex-wrap: wrap;
  gap: 20px;
}

.card {
  flex: 1;
  min-width: 250px;
  background: #f9fafb;
  border-radius: 18px;
  padding: 20px 25px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.card h4 {
  font-size: 1.1rem;
  margin-bottom: 4px;
  color: #555;
}

.card p {
  font-weight: 600;
  font-size: 1.2rem;
}

.card i {
  font-size: 2rem;
  opacity: 0.8;
}

/* cores dos cards */
.resumo-entrada {
  background: linear-gradient(90deg, #4ade80, #22c55e);
  color: #fff;
}

.resumo-saida {
  background: linear-gradient(90deg, #f87171, #ef4444);
  color: #fff;
}

.resumo-saldo {
  background: linear-gradient(90deg, #6366f1, #8b5cf6);
  color: #fff;
}

/* ======== FORM ======== */
.form-mov {
  display: flex;
  flex-direction: column;
  gap: 22px;
}

.form-group {
  display: flex;
  flex-direction: column;
  position: relative;
}

.form-group label {
  font-weight: 600;
  color: #333;
  margin-bottom: 6px;
  font-size: 1rem;
}

/* inputs */
.form-group input,
.form-group select,
.form-group textarea {
  border: 2px solid #e5e7eb;
  border-radius: 12px;
  padding: 12px 16px;
  font-size: 1rem;
  transition: all 0.25s ease;
  background: #fafafa;
  resize: none;
  width: 100%;
  box-sizing: border-box;
}

.form-group textarea {
  min-height: 90px; /* corrigido: campo descrição não corta mais */
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  border-color: #6366f1;
  box-shadow: 0 0 10px #6366f14a;
  background: #fff;
  outline: none;
}

/* ======== BOTÕES ======== */
.form-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
  gap: 20px;
}

.btn-salvar,
.btn-voltar {
  padding: 14px 28px;
  border-radius: 12px;
  border: none;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  text-align: center;
  display: flex;
  align-items: center;
  gap: 10px;
}

.btn-salvar {
  background: linear-gradient(90deg, #6366f1, #a855f7);
  color: white;
  box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
}

.btn-salvar:hover {
  transform: scale(1.03);
  box-shadow: 0 6px 18px rgba(99, 102, 241, 0.55);
}

.btn-voltar {
  background: #f3f4f6;
  color: #333;
  border: 2px solid #d1d5db;
}

.btn-voltar:hover {
  background: #e5e7eb;
  transform: translateY(-2px);
}

/* ======== RESPONSIVO ======== */
@media (max-width: 768px) {
  .container-mov {
    padding: 30px 20px;
  }

  .resumo-mov {
    flex-direction: column;
  }

  .form-buttons {
    flex-direction: column;
  }

  .btn-salvar,
  .btn-voltar {
    width: 100%;
    justify-content: center;
  }
}
.container-mov {
  overflow: visible !important;
}

.form-group textarea {
  min-height: 120px;
  height: auto;
  resize: vertical;
  overflow: auto;
  background: #fafafa;
  border-radius: 12px;
  padding: 12px 16px;
  border: 2px solid #e5e7eb;
  font-size: 1rem;
  box-sizing: border-box;
}


</style>