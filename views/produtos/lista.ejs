            }

            .card-actions {
                display: flex;
                justify-content: space-between;
                padding: 15px;
                gap: 10px;
            }

            .btn-editar,
            .btn-excluir {
                flex: 1;
                padding: 8px;
                border: none;
                cursor: pointer;
                border-radius: 6px;
            }

            .btn-editar {
                background-color: dodgerblue;
                color: white;
            }

            .btn-excluir {
                background-color: crimson;
                color: white;
            }

            /* CARROSSEL */
            .carrossel {
                position: relative;
                width: 100%;
                overflow: hidden;
                margin-bottom: 20px;
            }

            .slides {
                display: flex;
                transition: transform 0.6s ease-in-out;
            }

            .slide {
                min-width: 100%;
            }

            .slide img {
                width: 100%;
                height: 400px;
                object-fit: cover;
                display: block;
            }

            .controles {
                position: absolute;
                top: 50%;
                width: 100%;
                display: flex;
                justify-content: space-between;
                transform: translateY(-50%);
                padding: 0 10px;
            }

            .botao {
                background: rgba(0, 0, 0, 0.5);
                color: white;
                border: none;
                font-size: 28px;
                cursor: pointer;
                padding: 6px 14px;
                border-radius: 50%;
                transition: 0.3s;
            }

            .botao:hover {
                background: rgba(255, 255, 255, 0.4);
            }
        </style>

        <script>
            const slides = document.querySelector('.slides');
            const totalSlides = document.querySelectorAll('.slide').length;
            let indice = 0;

            function mostrarSlide(index) {
                slides.style.transform = `translateX(${-index * 100}%)`;
            }

            document.getElementById('avancar').addEventListener('click', () => {
                indice = (indice + 1) % totalSlides;
                mostrarSlide(indice);
            });

            document.getElementById('voltar').addEventListener('click', () => {
                indice = (indice - 1 + totalSlides) % totalSlides;
                mostrarSlide(indice);
            });

            setInterval(() => {
                indice = (indice + 1) % totalSlides;
                mostrarSlide(indice);
            }, 5000);
        </script>

