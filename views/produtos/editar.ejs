<%- include('../includes/header.ejs', { titulo: 'Editar Produto' }) %>

<main>
    <h2>Editar Produto</h2>

    <form action="/produtos/editar/<%= produto.id_produto %>" method="POST" class="form">

        <div class="form-group">
            <label>Nome do Produto</label>
            <input type="text" name="nome_produto" value="<%= produto.nome_produto %>" required>
        </div>

        <div class="form-group">
            <label>Categoria</label>
            <select name="id_categoria" required>
                <% categorias.forEach(cat => { %>
                    <option value="<%= cat.id_categoria %>"
                        <%= cat.id_categoria == produto.id_categoria ? "selected" : "" %>>
                        <%= cat.nome_categoria %>
                    </option>
                <% }) %>
            </select>
        </div>

        <button type="submit">Salvar Alterações</button>
    </form>
</main>

<%- include('../includes/footer.ejs') %>
